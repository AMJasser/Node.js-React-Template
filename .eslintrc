{
    "root": true,
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "extends": ["eslint:recommended", "prettier"],
    "env": {
        "es2021": true,
        "node": true
    },
    "plugins": ["prettier"],
    "rules": {
        "quotes": ["warn", "double"],
        "no-useless-escape": 0,
        "prettier/prettier": [
            "warn",
            {
                "tabWidth": 4
            }
        ]
    }
}
